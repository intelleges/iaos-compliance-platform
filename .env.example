# IAOS Compliance Platform - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED CONFIGURATION
# ============================================

# Database Connection (MySQL/TiDB)
DATABASE_URL="mysql://username:password@host:port/database?ssl={\"rejectUnauthorized\":true}"

# Application Environment
NODE_ENV="production"
PORT=3000

# ============================================
# OPTIONAL CONFIGURATION
# ============================================

# OAuth Authentication (if using)
OAUTH_SERVER_URL=""
OAUTH_CLIENT_ID=""
OAUTH_CLIENT_SECRET=""

# Email Service (SendGrid)
SENDGRID_API_KEY=""
SENDGRID_FROM_EMAIL="noreply@yourdomain.com"

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# Frontend Branding
VITE_APP_TITLE="Federal Compliance Management Platform"
VITE_APP_LOGO=""
VITE_ANALYTICS_ENDPOINT=""
VITE_ANALYTICS_WEBSITE_ID=""

# ============================================
# NOTES
# ============================================

# DATABASE_URL format for TiDB Cloud:
# mysql://username:password@gateway01.ap-southeast-1.prod.aws.tidbcloud.com:4000/database_name?ssl={"rejectUnauthorized":true}

# For local MySQL:
# mysql://root:password@localhost:3306/compliance_db

# SendGrid API Key: Get from https://app.sendgrid.com/settings/api_keys
# Twilio Credentials: Get from https://console.twilio.com/
